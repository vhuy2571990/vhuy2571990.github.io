}  
.sort_soin:after{
	content: "";
    background: url(../../images/soin/search.png);
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center right;
    width: 20px;
    height: 20px;
    position: absolute;
    right: 0;
    transform: translateY(50%);
    margin-top: -4px;
    z-index: 9
}
.sort_soin
	position: relative
	
.control.has-addons .sort_soin .input:last-child
	border-radius: 0px
